<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PatyTempo.MainPage"
             Shell.NavBarIsVisible="false">
 
  <Grid>  
<Grid.RowDefinitions>
   <RowDefinition Height="*"/>
   <RowDefinition Height="80"/>
   <RowDefinition Height="80"/>
   <RowDefinition Height="*"/>
   <RowDefinition Height="150"/>
</Grid.RowDefinitions>
<Grid.ColumnDefinitions>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
</Grid.ColumnDefinitions> 

        <Image x:Name="fotodefundo"
            Aspect= "AspectFill"
            Grid.Row="0"
            Grid.RowSpan="5"
            Grid.Column="0"
            Grid.ColumnSpan="3"/>
 
        <Frame

          Margin="10,0,0,0"
          Padding="0"
          CornerRadius="30"
          BackgroundColor="#88ffffff"
          Grid.Row="1"
          Grid.RowSpan="2"
          Grid.Column="0">
          <Grid>
          <Grid.ColumnDefinitions>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   </Grid.ColumnDefinitions> 

          <Label x:Name="labelTemp"
          FontSize= "20"
          Grid.row= "0"
          HorizontalOptions="Center"/>
          <Label x:Name="labelSky"/>
          <Label x:Name= "labelCidade"/>
          </Grid>
        </Frame>

        <Frame 
          Padding="0"
          CornerRadius="30"
          BackgroundColor="#88ffffff"
          Grid.Row="1"
          Grid.Column="1">
          <Grid>
          <Grid.ColumnDefinitions>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   </Grid.ColumnDefinitions> 
          <Label x:Name= "labelChuva"/>
          <Label x:Name= "labelHumidade"/>

         <Label Text= "Chuva"
         FontSize= "12"
          Grid.Row= "0"
          Grid.Column= "0"/>

         <Label Text="Humidade"
         FontSize= "12"
         Grid.Row= "1"
         Grid.Column= "0"/>

          </Grid>
          </Frame>

        <Frame 
          Padding="0"
          CornerRadius="30"
          BackgroundColor="#88ffffff"
          Grid.Row="2"
          Grid.Column="1">
          <Grid>
          <Grid.ColumnDefinitions>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   </Grid.ColumnDefinitions> 
          <Label x:Name= "labelAmanhecer"/>
          <Label x:Name= "labelAnoitecer"/>

        <Label Text= "Chuva"
        FontSize= "12"
          Grid.Row= "0"
          Grid.Column= "0"/>

         <Label Text="Humidade"
         FontSize= "12"
         Grid.Row= "1"
         Grid.Column= "0"/>
          </Grid>
        </Frame>

        <Frame
          Margin="0,0,10,0"
          Padding="0"
          CornerRadius="30"
          BackgroundColor="#88ffffff"
          Grid.Row="1"
          Grid.RowSpan="1"
          Grid.Column="2">
          <Grid>
          <Grid.ColumnDefinitions>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   </Grid.ColumnDefinitions> 
          <Label x:Name= "labelForcawind"/>
          <Label x:Name= "labelDirecaowind"/>

         <Label Text= "ForcaWind"
         FontSize= "12"
          Grid.Row= "0"
          Grid.Column= "0"/>

         <Label Text="DirecaoWind"
         FontSize= "12"
         Grid.Row= "1"
         Grid.Column= "0"/>

          </Grid>
        </Frame>

        <Frame 
        Margin="10,0,10,10"
          Padding="0"
          CornerRadius="30"
          BackgroundColor="#88ffffff"
          Grid.Row="4"
          Grid.Column="0"
          Grid.ColumnSpan="3"> 
          <Grid>
        <Grid.ColumnDefinitions>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   </Grid.ColumnDefinitions> 
          <Label x:Name= "labelMoonFase"/>

          <Label Text= "Fase da Lua"
          FontSize= "12"
          Grid.Row= "0"
          Grid.Column= "0"/>


          </Grid>
        </Frame>
        <Frame 
        Margin="0,0,10,0"
          Padding="0"
          CornerRadius="30"
          BackgroundColor="#88ffffff"
          Grid.Row="2"
          Grid.Column="2">
          <Grid>
           <Grid.ColumnDefinitions>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="*"/>
   </Grid.ColumnDefinitions> 
   </Grid>
        </Frame>

</Grid>
</ContentPage>



 



